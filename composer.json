{
    "name": "dhalsim/phatru",
    "description": "A PHP relay library with Khatru-style event handlers",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Phatru",
            "email": "nostrize@proton.me"
        }
    ],
    "require": {
        "php": ">=8.1",
        "cboden/ratchet": "^0.4.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "paragonie/easy-ecc": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Phatru\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phatru\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "example": "php example.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 